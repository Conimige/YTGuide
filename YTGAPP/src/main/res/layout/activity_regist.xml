<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.myzchh.YTGuide.registActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:id="@+id/btn_nav"
        android:background="@drawable/p_rec_bkg"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="用户名"
        android:ems="10"
        android:id="@+id/textbox_user"
        android:background="@drawable/p_textbox_bkg2"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="密码"
        android:id="@+id/textbox_password"
        android:background="@drawable/p_textbox_bkg2"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_user"
        android:layout_alignLeft="@+id/textbox_user"
        android:layout_alignStart="@+id/textbox_user"
        android:layout_alignRight="@+id/textbox_user"
        android:layout_alignEnd="@+id/textbox_user"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="确认密码"
        android:id="@+id/textbox_password2"
        android:background="@drawable/p_textbox_bkg2"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_password"
        android:layout_alignLeft="@+id/textbox_password"
        android:layout_alignStart="@+id/textbox_password"
        android:layout_alignRight="@+id/textbox_password"
        android:layout_alignEnd="@+id/textbox_password"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/textView3"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您需要填写以下信息来完成注册："
        android:id="@+id/textView4"
        android:layout_below="@+id/btn_nav"
        android:layout_alignLeft="@+id/textbox_user"
        android:layout_alignStart="@+id/textbox_user" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:hint="昵称"
        android:id="@+id/textbox_nickname"
        android:background="@drawable/p_textbox_bkg2"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_password2"
        android:layout_alignLeft="@+id/textbox_password2"
        android:layout_alignStart="@+id/textbox_password2"
        android:layout_alignRight="@+id/textbox_password2"
        android:layout_alignEnd="@+id/textbox_password2"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="注册"
        android:id="@+id/btn_login"
        android:textSize="15dp"
        android:background="@drawable/btn_regist"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:clickable="true" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:id="@+id/button_Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_back_w"
        android:layout_marginTop="19dp"
        android:clickable="true"/>
</RelativeLayout>
