<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stx.voicenote.VoiceActivity">

    <TextView
        android:text="@string/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7b76"
        android:id="@+id/lblPrompt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voice_recognize"
        android:id="@+id/btnVoiceRecognize"
        android:layout_below="@+id/lblPrompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:onClick="btnVoiceRecognize_Click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quit"
        android:id="@+id/btnQuit"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:onClick="btnQuit_Click"
        android:layout_above="@+id/btn_api"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直接识别方式"
        android:id="@+id/btn_api"
        android:layout_below="@+id/btnVoiceRecognize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
